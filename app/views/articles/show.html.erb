<div class="container">
	<center>
		<h1 class="title-show"><%= @article.title %></h1>
		by <span style="color: #1db954"><%= @article.user.email %></span>
	</center>

	<div class="row">

		<div class="col-sm-1">		
		</div>

		<div class="col-sm-10 col-xs-12 article-div-body">		
			<p class="article-p-body">
				<% if @ninja %>
				<center style="color: #606060"><i class="fas fa-user-ninja" style="color: #AAA; font-size: 40px;" ></i><br><\Script Inject Security></center> 
				<% else %>
				<%= @body_markdown.html_safe %>
				<% end %>
			</p>		
		</div>

		<div class="col-sm-1">		
		</div>
	</div>

		<% if user_signed_in? && current_user == @article.user %>
			<center>
			<div class="col-lg-3 col-sm-1">
			</div>
			<div class="col-lg-3 col-sm-5 col-xs-12 btn-edit">
				<%= link_to("Editer", edit_article_path(@article), class: "btn") %>
			</div>
			<div class="col-lg-3 col-sm-5 col-xs-12 btn-edit">
				<%= link_to("Supprimer", article_path(@article), class: "btn btn-delete", method: :delete,
				data: { confirm: "Vous allez supprimer l'article : #{@article.title}" }) %>
			</div>
			<div class="col-lg-3 col-sm-1">
			</div>
			</center>
		<% end %>
</div>
