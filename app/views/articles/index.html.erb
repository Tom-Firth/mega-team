<div class="container">
	<h1>Articles</h1>
	<div class="row">
		<div class="card-link col-sm-4 col-xs-12">
			<% @articles.each do |article| %>
			<p>
				<%= link_to "#{article.title}", article_path(article) %><br>
				by 
				<span style="color: #1db954"><%= article.user.email %></span>
			</p>
			<% end %>
		</div>
	</div>
</div>
