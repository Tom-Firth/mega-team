<div class="container">
	<h1>Articles</h1>
	<div class="row">
		<% @articles.each do |article| %>
		
			<a href=" <%= article_path(article) %> ">
				<div class="card-link col-lg-4 col-sm-6 col-xs-12">
					<p style="padding-top: 10px">
						<span style="color: orange; font-weight: bold; font-size: 20px; text-transform: uppercase;"><%= article.title %></span><br>
						by <br>
						<span style="color: #1db954"><%= article.user.email %></span>
					</p>
				</div>
			</a>

		<% end %>
		<a href="<%= new_article_path %>">
			<div class="card-link col-lg-4 col-sm-6 col-xs-12">
				<i class='fas fa-plus-circle'></i>
			</div>
		</a>
	</div>
</div>
