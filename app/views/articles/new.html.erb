<div class="container">
  <h1>Nouveau</h1>
  <div class="row">
    <div class="col-sm-2">
    </div>    
    <div class="col-sm-8 col-xs-12">
      <%= simple_form_for(@article) do |f| %>
        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :body %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Ajouter" %>
        </div>
      <% end %>

    </div>    
    <div class="col-sm-2">
    </div>    
  </div>
</div>

